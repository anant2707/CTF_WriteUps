#include <iostream>
#include <chrono>
#include <thread>
using namespace std;

int main() {
    int bucketSize, outputRate, packets, packetSize;
    int i, bucketCapacity = 0;
    
    cout << "Enter the bucket size: ";
    cin >> bucketSize;
    cout << "Enter the output rate: ";
    cin >> outputRate;
    cout << "Enter the number of packets: ";
    cin >> packets;
    
    for (i = 1; i <= packets; i++) {
        cout << "Enter the size of packet " << i << ": ";
        cin >> packetSize;
        
        if (packetSize <= bucketSize - bucketCapacity) {
            bucketCapacity += packetSize;
            cout << "Packet " << i << " transmitted." << endl;
        } else {
            cout << "Bucket overflow." << endl;
        }
        
        this_thread::sleep_for(chrono::milliseconds(outputRate));
        
        if (bucketCapacity != 0) {
            bucketCapacity -= outputRate;
        }
    }
    
    while (bucketCapacity) {
        cout << "Bytes remaining in the bucket: " << bucketCapacity << endl;
        bucketCapacity -= outputRate;
        this_thread::sleep_for(chrono::milliseconds(outputRate));
    }
    
    return 0;
}
